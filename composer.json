{
  "name": "monolith/relational-database",
  "description": "Relational database component for the Monolith framework.",
  "keywords": [
    "monolith",
    "http"
  ],
  "require": {
    "php": ">=7.4",
    "monolith/dependency-injection": "^8",
    "monolith/configuration": "^6",
    "ext-pdo": "*"
  },
  "require-dev": {
    "phpspec/phpspec": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Monolith\\RelationalDatabase\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\Monolith\\RelationalDatabase\\": "spec/"
    },
    "files": [
      "spec/functions.php"
    ]
  },
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "minimum-stability": "dev"
}
